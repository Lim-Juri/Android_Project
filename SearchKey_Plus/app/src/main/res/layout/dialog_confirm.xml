<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_confirm_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:text="텍스트 테스트용"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/no_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:backgroundTint="#49AEFF"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/yes_button"/>

    <Button
        android:id="@+id/yes_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#49AEFF"
        app:layout_constraintStart_toEndOf="@id/no_button"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_text_view"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>