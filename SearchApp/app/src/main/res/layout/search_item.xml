<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/const_search_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/search_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/dotori"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도토리를 찾아주세용"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_iv_image" />

    <TextView
        android:id="@+id/search_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 구월,,,"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_tv_title" />

    <ImageView
        android:id="@+id/search_iv_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/like"
        app:layout_constraintBottom_toBottomOf="@id/search_tv_date"
        app:layout_constraintEnd_toEndOf="@id/search_iv_image"
        app:layout_constraintTop_toTopOf="@id/search_tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>